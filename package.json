{
  "scripts": {
    "prod": "docker-compose -f docker-compose.prod.yml up -d && docker ps",
    "up": "docker-compose -f docker-compose.local.yml up -d && docker ps",
    "down": "docker-compose -f docker-compose.local.yml down",
    "kill": "docker-compose kill",
    "geth": "docker exec -it $(docker ps -a -q --filter name=ethereumdocker_eth) geth",
    "in": "docker exec -it $(docker ps -a -q --filter name=ethereumdocker_eth) /bin/sh 2>/dev/null",
    "attach": "npm run geth -- attach ipc://root/.ethereum/devchain/geth.ipc",
    "exec": "npm run geth -- attach ipc://root/.ethereum/devchain/geth.ipc --exec",
    "load": "npm run exec -- 'loadScript(\"$JS\")'",
    "ls": "npm run geth -- account list",
    "ls-testnet": "npm run geth -- --testnet account list",
    "ls-dev": "npm run geth -- --dev --datadir /root/.ethereum/devchain account list",
    "new": "npm run geth -- account new",
    "new-testnet": "npm run geth -- --testnet account new",
    "new-dev": "npm run geth -- --dev  --datadir /root/.ethereum/devchain account new",
    "console": "npm run geth -- --fast --cache=512 console",
    "console-testnet": "npm run geth -- --testnet --port 0 --fast --cache 512 console",
    "console-dev": "npm run geth -- --dev console",
    "mine": "npm run geth -- --mine --minerthreads 2 --etherbase 0",
    "mine-testnet": "npm run geth -- --testnet --mine --minerthreads 2 --etherbase 0",
    "mine-dev": "npm run geth -- --dev --datadir /root/.ethereum/devchain --mine --minerthreads 2 --etherbase 0",
    "balance": "ID=${ID:-0} npm run exec -- 'eth.getBalance( eth.accounts[$ID] )'",
    "unlock": "ID=${ID:-0} npm run exec -- 'personal.unlockAccount( personal.listAccounts[$ID], \"\" )'",
    "send": "npm run exec -- 'eth.sendTransaction({from:eth.accounts[$FROM], to:eth.accounts[$TO], value: web3.toWei($VALUE, \"ether\")})'",
    "_ls": "npm run exec -- personal.listAccounts",
    "_new": "npm run exec -- 'personal.newAccount()'",
    "_unlock": "npm run exec -- 'personal.unlockAccount( eth.coinbase, \"\" )'",
    "_send": "npm run _unlock && npm run exec -- 'personal.sendTransaction({from:eth.coinbase, to:eth.accounts[$TO], value: web3.toWei($VALUE, \"ether\")})'",
    "_balance": "npm run exec -- 'eth.getBalance( eth.coinbase )'",
    "_start": "npm run exec -- 'miner.start()'",
    "_stop": "npm run exec -- 'miner.stop()'",
    "_coinbase": "npm run exec -- coinbase",
    "_pending": "npm run exec -- eth.pendingTransactions",
    "balances": "JS=./src/gethload.js npm run load"
  }
}